<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reg No : "
            android:textColor="#dc1010"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spot : "
            android:textColor="#19ec15"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/tvRegNo"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvspot"
            android:text="Hours : "
            android:textColor="#f2eeee"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView
           android:paddingLeft="15dp"
           android:id="@+id/tvRegNo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="TextView"
           android:textColor="#dc1010"
           android:textSize="20sp"
           android:textStyle="bold" />

       <TextView
           android:paddingLeft="15dp"
           android:id="@+id/tvspot"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="TextView"
           android:textColor="#19ec15"
           android:textSize="20sp"
           android:textStyle="bold" />

       <TextView
           android:paddingLeft="15dp"
           android:id="@+id/tvhour"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="TextView"
           android:textColor="#f2eeee"
           android:textSize="20sp"
           android:textStyle="bold" />
       <TextView
           android:paddingLeft="15dp"
           android:id="@+id/tvtaken"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="TextView"
           android:textColor="#12cdde"
           android:textSize="20sp"
           android:textStyle="bold" />
   </LinearLayout>



</LinearLayout>